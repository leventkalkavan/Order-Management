@model OrderManagement.Web.DTOs.BookingWebDto.UpdateBookingWebDto

@{
    ViewBag.Title = "title";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasyon İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Rezervasyon Güncelle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="date">Rezervasyon Tarihi</label>
                                <input asp-for="Date" type="date" class="form-control" id="date" min="@DateTime.Now.ToString("yyyy-MM-dd")">
                            </div>
                            <div class="form-group">
                                <label for="name">Rezervasyon Sahibi Adı</label>
                                <input asp-for="Name" type="text" class="form-control" id="name">
                            </div>
                            <div class="form-group">
                                <label for="personCount">Kişi Sayısı</label>
                                <input min="0"  asp-for="PersonCount" type="number" class="form-control" id="personCount">
                            </div>
                            <div class="form-group">
                                <label for="telephone">Telefon Numarası</label>
                                <input asp-for="Telephone" type="tel" class="form-control" id="telephone">
                            </div>
                            <div class="form-group">
                                <label for="email">Mail</label>
                                <input asp-for="Email" type="text" class="form-control" id="email">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-warning">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>