@model OrderManagement.Web.DTOs.CreateCategoryWebDto

@{
    ViewBag.Title = "title";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Kategori İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Kategori Ekle</div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="name">Kategori Adı</label>
                            <input  asp-for="Name" type="text" class="form-control" id="name">
                        </div>
                    </div>
                    <div class="card-action">
                        <button class="btn btn-primary">Ekle</button>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>