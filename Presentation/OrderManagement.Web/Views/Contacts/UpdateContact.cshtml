@model OrderManagement.Web.DTOs.ContactWebDto.UpdateContactWebDto

@{
    ViewBag.Title = "title";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Yazısı Düzenle</div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="location">İletişim Adresi</label>
                            <input  asp-for="Location" type="text" class="form-control" id="location">
                        </div>
                        <div class="form-group">
                            <label for="phone">İletişim Numarası</label>
                            <input  asp-for="Phone" type="tel" class="form-control" id="phone">
                        </div>
                        <div class="form-group">
                            <label for="mail">İletişim Emaili</label>
                            <input  asp-for="Mail" type="email" class="form-control" id="mail">
                        </div>
                        <div class="form-group">
                            <label for="description">İletişim Yazısı</label>
                            <input  asp-for="FooterDescription" type="text" class="form-control" id="description">
                        </div>
                    </div>
                    <div class="card-action">
                        <button class="btn btn-warning">Güncelle</button>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>