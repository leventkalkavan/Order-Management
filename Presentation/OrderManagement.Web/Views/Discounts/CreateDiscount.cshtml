@model OrderManagement.Web.DTOs.DiscountWebDto.CreateDiscountWebDto

@{
    ViewBag.Title = "title";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İndirim Ekle</div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="title">İndirim Başlığı</label>
                            <input  asp-for="Title" type="text" class="form-control" id="title">
                        </div>
                        <div class="form-group">
                            <label for="amount">İndirim Miktarı</label>
                            <input  asp-for="Amount" type="text" class="form-control" id="amount">
                        </div>
                        <div class="form-group">
                            <label for="description">İndirim İçeriği</label>
                            <input  asp-for="Description" type="text" class="form-control" id="description">
                        </div>
                        <div class="form-group">
                            <label for="imageurl">İndirim Görsel Url'i</label>
                            <input  asp-for="ImageUrl" type="text" class="form-control" id="imageurl">
                        </div>
                    </div>
                    <div class="card-action">
                        <button class="btn btn-primary">Ekle</button>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>