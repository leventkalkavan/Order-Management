@model List<OrderManagement.Web.DTOs.DiscountWebDto.ResultDiscountWebDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İndirim Listesi</div>
                    </div>
                    <div class="card-body">
                        <table class="table mt-3">
                            <thead>
                            <tr class="text-center">
                                <th scope="col">#</th>
                                <th scope="col">İndirim Başlığı</th>
                                <th scope="col">İndirim Miktarı</th>
                                <th scope="col">İndirim İçeriği</th>
                                <th scope="col">İndirim Görseli</th>
                                <th scope="col">İndirim Durumu</th>
                                <th scope="col">Güncelle</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Durumunu Aktif Yap</th>
                                <th scope="col">Durumunu Pasif Yap</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            { count++;
                                <tr class="text-center">
                                    <td>@count</td>
                                    <td>@item.Title</td>
                                    <td>@item.Amount</td>
                                    <td>@item.Description</td>
                                    <td>@item.ImageUrl</td>
                                    <td>@item.Status</td>
                                    <td>
                                        <a href="/Discounts/UpdateDiscount/@item.Id">
                                            <img src="@Url.Content("~/img/edit.png")" alt="Edit Image" width="20" height="20">
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/Discounts/DeleteDiscount/@item.Id"
                                           onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                            <img src="@Url.Content("~/img/delete.png")" alt="Delete Image" width="20" height="20">
                                        </a>
                                    </td>
									<td>
									<a href="/Discounts/ChangeStatusToTrue/@item.Id">
									<img src="@Url.Content("~/img/confirm.png")" alt="Edit Image" width="20" height="20">
									</a>
                                    </td>
									<td>
									<a href="/Discounts/BookingStatusCancelled/@item.Id">
									<img src="@Url.Content("~/img/revoke.png")" alt="Edit Image" width="20" height="20">
									</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                        <a href="/Discounts/CreateDiscount" class="btn btn-outline-primary">İndirim Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>