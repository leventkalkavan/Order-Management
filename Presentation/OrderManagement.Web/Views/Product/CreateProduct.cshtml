@model OrderManagement.Web.DTOs.ProductWebDto.CreateProductWebDto

@{
    ViewBag.Title = "title";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Ürün Ekle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Ürün Adı</label>
                                <input asp-for="Name" type="text" class="form-control" id="name">
                            </div>
                            <div class="form-group">
                                <label for="description">Ürün İçeriği</label>
                                <input asp-for="Description" type="text" class="form-control" id="Description">
                            </div>
                            <div class="form-group">
                                <label for="price">Ürün Fiyatı</label>
                                <input asp-for="Price" type="text" class="form-control" id="Price">
                            </div>

                            <div class="form-group">
                                <label for="imageUrl">Ürün Resim URL</label>
                                <input asp-for="ImageUrl" type="text" class="form-control" id="ImageUrl">
                            </div>
                            <div class="form-group">
                                <label for="imageUrl">Ürün Kategorisi</label>
                                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)
                                    ViewBag.Categories,
                                    new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>