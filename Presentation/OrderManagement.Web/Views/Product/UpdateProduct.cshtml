@model OrderManagement.Web.DTOs.ProductWebDto.UpdateProductWebDto

@{
    ViewBag.Title = "title";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Ürün Güncelle</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Ürün Adı</label>
                                <input asp-for="Name" type="text" class="form-control" id="name">
                            </div>
                            <div class="form-group">
                                <label for="description">Ürün İçeriği</label>
                                <input asp-for="Description" type="text" class="form-control" id="description">
                            </div>
                            <div class="form-group">
                                <label for="price">Ürün Fiyatı</label>
                                <input asp-for="Price" type="text" class="form-control" id="price">
                            </div>

                            <div class="form-group">
                                <label for="imageUrl">Ürün Resim URL</label>
                                <input asp-for="ImageUrl" type="text" class="form-control" id="imageUrl">
                            </div>
                            <div class="form-group">
                                 <label for="status">Ürün Durumu</label>
                                 <select asp-for="Status" class="form-control" id="status">
                                     <option value="true">Aktif</option>
                                     <option value="false">Pasif</option>
                                 </select>
                             </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-warning">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>