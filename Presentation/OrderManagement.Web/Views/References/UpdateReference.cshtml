@model OrderManagement.Web.DTOs.ReferenceWebDto.UpdateReferenceWebDto

@{
    ViewBag.Title = "title";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referans İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Referans Yazısı Güncelle</div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="title">Referans Başlığı</label>
                            <input  asp-for="Title" type="text" class="form-control" id="title">
                        </div>
                        <div class="form-group">
                            <label for="name">Referans Adı</label>
                            <input  asp-for="Name" type="text" class="form-control" id="name">
                        </div>
                        <div class="form-group">
                            <label for="comment">Yorumu</label>
                            <input  asp-for="Comment" type="text" class="form-control" id="comment">
                        </div>
                        <div class="form-group">
                            <label for="imageUrl">Referans Görseli</label>
                            <input  asp-for="ImageUrl" type="text" class="form-control" id="imageUrl">
                        </div>
                    </div>
                    <div class="card-action">
                        <button class="btn btn-warning">Güncelle</button>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>