@model OrderManagement.Web.DTOs.SocialMediaWebDto.UpdateSocialMediaWebDto

@{
    ViewBag.Title = "title";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Sosyal Medya Güncelle</div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="title">Sosyal Medya Başlığı</label>
                            <input  asp-for="Title" type="text" class="form-control" id="title">
                        </div>
                        <div class="form-group">
                            <label for="url">Sosyal Medya Url'si</label>
                            <input  asp-for="Url" type="text" class="form-control" id="url">
                        </div>
                        <div class="form-group">
                            <label for="icon">Sosyal Medya Iconu</label>
                            <input  asp-for="Icon" type="text" class="form-control" id="icon">
                        </div>
                    </div>
                    <div class="card-action">
                        <button class="btn btn-warning">Güncelle</button>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>